# Demo environment - For testing locally
# Copy this to .env and add your real API keys

# AI Content Generation (Required for demo)
GROQ_API_KEY=your_groq_api_key_here

# Trend Detection (Optional for demo - will use fallback)
REDDIT_CLIENT_ID=demo_reddit_id
REDDIT_CLIENT_SECRET=demo_reddit_secret
REDDIT_USER_AGENT=fashion_agent_demo

TWITTER_BEARER_TOKEN=demo_twitter_token

# Media APIs (Required for video creation)
PEXELS_API_KEY=your_pexels_key_here
UNSPLASH_ACCESS_KEY=your_unsplash_key_here

# Platform Upload Credentials (Optional for demo - can skip uploads)
YOUTUBE_CLIENT_SECRETS_FILE=client_secrets.json
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_ACCESS_TOKEN_POST=your_twitter_access_token
TWITTER_ACCESS_SECRET_POST=your_twitter_access_secret
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
TIKTOK_SESSION_ID=your_tiktok_session_id

# Agent Settings
DAILY_VIDEOS_COUNT=2
UPLOAD_STAGGER_MINUTES=10
LOG_LEVEL=INFO
DATABASE_PATH=data/agent.db
OUTPUT_DIR=output/videos
